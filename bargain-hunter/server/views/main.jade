html(lang='en')
    head
        meta(charset="UTF-8")
        title
            | Bargain Hunter

        link(href="/public/bower_components/bootstrap/dist/css/bootstrap.min.css", rel="stylesheet")
        link(href="/public/css/site.css", rel="stylesheet")

        script(src="/public/bower_components/jquery/dist/jquery.min.js")
