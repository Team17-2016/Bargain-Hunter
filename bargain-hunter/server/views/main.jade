doctype html
html(lang='en')
    head
        meta(charset="UTF-8")
        title
            | Bargain Hunter

        link(href="/public/bower_components/bootstrap/dist/css/bootstrap.min.css", rel="stylesheet")
        link(href="/public/css/site.css", rel="stylesheet")

        script(src="/public/bower_components/jquery/dist/jquery.min.js")
        script(src="/public/bower_components/bootstrap/dist/js/bootstrap.min.js")
        script(src="/public/bower_components/angular/angular.js")
        script(src="/public/js/app.js")
        block headContent
    body(ng-app="bargainHunterApp", ng-controller="MainController as mc")
        nav(class="navbar navbar-inverse")
            div(class="container-fluid")
                div(class="navbar-header")
                    button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
                        span(class="sr-only")
                            | Toggle navigation
                        span(class="icon-bar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                    a(class="navbar-brand" href="/")
                        | Bargain hunter
                div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
                    ul(class="nav navbar-nav")
                        li
                            a(href="/Home")
                                | Home
                        li
                            a(href="/Deals")
                                | Deals
                    ul(class="nav navbar-nav navbar-right")
                        if(isAuthenticated)
                            li
                                a(href="/users/profile")
                                    | Profile
                            li(class="dropdown closed")
                                a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="true")
                                    | Settings
                                    span(class="caret")
                                ul(class="dropdown-menu" role="menu")
                                    li
                                        a(href="/ads/create")
                                            | Create Ad
                                    li
                                        a(href="/users/edit")
                                            | Edit profile
                                    li(class="divider")
                                    li
                                        a(href="", ng-click="mc.logout()")
                                            | Logout
                        else
                            li
                                a(href="/users/login")
                                    | Login
                            li
                                a(href="/users/register")
                                    | Register
        block content

        footer(class="text-center")
            hr
            div
                strong
                    | Copyrights:
                    a(href="https://opensource.org/licenses/MIT")
                        |  MIT
            br
            div
                strong
                    | Powered by:
                    a(href="http://getbootstrap.com/")
                        |  Twitter Bootstrap
                    |  &
                    a(href="http://jade-lang.com/")
                        |  Jade
            hr

        script(src="/public/js/common/data-service.js")
        script(src="/public/js/common/main-controller.js")
        block bottomBodyContent