                        | Bargain hunter
                div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
                    ul(class="nav navbar-nav")
                        li
                            a(href="/Home")
                                | Home
                        li
                            a(href="/Deals")
                                | Deals
                    ul(class="nav navbar-nav navbar-right")
                        if(isAuthenticated)
                            li
                                a(href="/users/profile")
                                    | Profile
                            li
                                a(href="/users/logout")
                                    | Logout
                        else
                            li
                                a(href="/users/login")
                                    | Login
                            li
                                a(href="/users/register")
                                    | Register
