extend main

block content
    h1(class="text-center") Users
    .container(ng-controller="AdminUsersController as vm")
        .row
            .col-lg-10
                label(for="orderBy" class="col-lg-1 control-label") Order By
                .col-lg-3
                    select(class="form-control" ng-model="vm.request.orderBy" id="orderBy" ng-change="vm.filter()")
                        option(value="username") Username
                        option(value="email") Email
                label(for="orderType" class="col-lg-1 control-label") Order Type
                .col-lg-3
                    select(class="form-control" ng-model="vm.request.orderType" id="orderType" ng-change="vm.filter()")
                        option(value="asc") Ascending
                        option(value="desc") Descending
        br
        .row
            table(class="table table-striped table-hover")
                thead
                tr(class="active")
                    th Username
                    th Email
                    th Admin
                    th Edit
                tbody
                tr(ng-repeat="u in vm.users")
                    td {{u.username}}
                    td {{u.email}}
                    td {{u.isAdmin}}
                    td
                        a(href="/admin/users/edit/{{u._id}}") Edit
        .row
            .col-lg-4
                .row
                    .col-lg-2
                        button(class="btn btn-primary" type="button" ng-click="vm.updatePage(-1)") &lt;
                    .col-lg-3
                        input(type="number" class="form-control" ng-model="vm.request.page" ng-change="vm.filter()")
                    .col-lg-2
                        button(class="btn btn-primary" type="button" ng-click="vm.updatePage(1)") &gt;

block bottomBodyContent
    script(src="/public/js/admin/admin-users-controller.js")